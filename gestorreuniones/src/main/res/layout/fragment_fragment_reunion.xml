<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mikel.gestorreuniones.FragmentReunion">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:drawableStart="@mipmap/ic_today_black_48dp"
            android:drawablePadding="10dip"
            android:gravity="center"
            android:layout_marginBottom = "30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fecha"
            android:drawableStart="@mipmap/ic_schedule_black_48dp"
            android:drawablePadding="10dip"
            android:gravity="center"
            android:layout_marginBottom = "30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lugar"
            android:drawableStart="@mipmap/ic_room_black_48dp"
            android:drawablePadding="10dip"
            android:gravity="center"
            android:layout_marginBottom = "30dp"/>

</LinearLayout>
